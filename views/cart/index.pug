extends ../layouts/common

block  content
  h1 Cart

  table.table
    tr
      th Product Id
      th Amount
      th Action

    if newCart
      each product in newCart
        tr
          td= product.productId
          td= product.amount
          td
            a.btn.btn-link(href='#') Delete product    
    else
      tr
        td(colspan="3") Không có sản phẩm nào        
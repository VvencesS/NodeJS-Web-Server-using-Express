extends ../layouts/common

block  content
  h1 Users

  .d-flex.align-items-center
    a(href="/users/create", class="btn btn-primary mb-3") New
    form(action="/users/search",method="GET", class="d-flex ml-auto")
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search

  table.table
    tr
      th Name
      th Phone
      th Action

    each user in users
      tr
        td= user.name
        td= user.phone
        td
          a.btn.btn-link(href='/users/' + user.id) View    